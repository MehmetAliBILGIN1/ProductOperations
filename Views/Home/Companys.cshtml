@model IEnumerable<ProductOperations.Models.Company>
@{
    ViewBag.Title = "Companys";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/DataTables-1.10.18/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Bootstrap-4-4.1.1/css/bootstrap4.css" />
</head>

<body>

    <div class="container" style="margin-top:20px">
        <table class="table table-striped table-inverse" id="productTable">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Company Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Result</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CompanyId</td>
                        <td>@item.CompanyName</td>
                        <td>@item.Price</td>
                        <td>@item.Result</td>
                    </tr>
                }
            </tbody>
            </table>
       
        </div>
        <script type="text/javascript" src="~/jQuery-3.3.1/jquery-3.3.1.js"></script>
        <script type="text/javascript" src="~/Bootstrap-4-4.1.1/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="~/DataTables-1.10.18/js/dataTables.bootstrap4.min.js"></script>

        <script>
            $('#productTable').DataTable();
        </script>
</body>
</html>

